{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "config": {
            "phpVersion": "8.5.0"
        },
        "buildCommand": "composer install --no-dev --optimize-autoloader && php artisan optimize:clear"
    },
    "deploy": {
        "startCommand": "php artisan serve --host=0.0.0.0 --port=${PORT}",
        "healthcheckPath": "/",
        "restartPolicyType": "ON_FAILURE"
    }
}
